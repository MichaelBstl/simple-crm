@model CrmUser
<div>
    @if (User.Identity.IsAuthenticated)
    {
        <span>Hello, @Model.DisplayName</span>
        <a class="mdl-navigation__link" asp-action="Logout" asp-controller="Account">Logout</a>
    }
    else
    {
        <span>Anonymous</span>
        <a class="mdl-navigation__link" asp-action="Login" asp-controller="Account">Login</a>
    }
</div>
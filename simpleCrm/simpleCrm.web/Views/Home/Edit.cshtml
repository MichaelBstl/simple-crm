@model CustomerEditViewModel
@{
    ViewBag.Title = $"Edit {Model.LastName}";
}

<div>
    <form method="post" asp-antiforgery="true">
        <div>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" />
        </div>
        <div>
            <label asp-for="LastName"></label>
            <input asp-for="LastName" />
        </div>
        <div>
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" />
        </div>
        <div>
            <label asp-for="OptInNewsletter"></label>
            <input asp-for="OptInNewsletter" />
        </div>

        <div>
            <select asp-for="Type" asp-items="Html.GetEnumSelectList(typeof(SimpleCrm.CustomerType))">
            </select>
        </div>
        <div>
            <input type="submit" value="Edit" />
        </div>
    </form>
</div>
